{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "module": "commonjs",
    "target": "ES2019",
    "declaration": false,
    "baseUrl": "node_modules"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "test"]
}
